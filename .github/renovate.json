{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "git-submodules": {
    "enabled": true,
    "versioning": "git",
    "fileMatch": [
      "(^|/)\\.gitmodules$"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "(^|/)PKGBUILD$"
      ],
      "matchStrings": [
        "pkgver=(?<currentValue>.*) # renovate: datasource=(?<datasource>.*) depName=(?<depName>.*)"
      ],
      "extractVersionTemplate": "^v?(?<version>.*)$",
      "versioningTemplate": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)$"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "(^|/)PKGBU1LD$"
      ],
      "matchStrings": [
        "pkgver=(?<currentValue>.*) # renovate: datasource=(?<datasource>.*) depName=(?<depName>.*)"
      ],
      "extractVersionTemplate": "^v?(?<version>.*)$"
    }
  ],
  "customDatasources": {
    "typora": {
      "defaultRegistryUrlTemplate": "https://www.typora.io/linux/Packages",
      "format": "plain"
    }
  },
  "packageRules": [
    {
      "description": "自动合并 submodule 更新",
      "matchManagers": [
        "git-submodules"
      ],
      "matchDatasources": [
        "git-refs"
      ],
      "enabled": true,
      "automerge": true,
      "ignoreTests": true,
      "automergeType": "branch"
    },
    {
      "description": "自动合并自定义 PKGBUILD 更新",
      "matchDatasources": [
        "github-tags",
        "custom.typora"
      ],
      "automerge": true,
      "ignoreTests": true,
      "automergeType": "branch"
    }
  ]
}