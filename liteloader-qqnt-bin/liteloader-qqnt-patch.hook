[Trigger]
Type=Package
Operation=Install
Operation=Upgrade
Target=liteloader-qqnt-bin

[Trigger]
Type=Package
Operation=Install
Operation=Upgrade
Target=linuxqq

[Action]
Description=Patch QQ for LiteLoaderQQNT...
When=PostTransaction
Exec=/bin/sh -c 'grep -q /opt/LiteLoaderQQNT /opt/QQ/resources/app/app_launcher/index.js || sed -i "1 i require(\"/opt/LiteLoaderQQNT\");" /opt/QQ/resources/app/app_launcher/index.js'
