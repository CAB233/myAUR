# Maintainer: yidaduizuoye <yidaduizuoye@outlook.com>

pkgname='liteloader-qqnt-pangu-bin'
_pkgname='LiteLoaderQQNT-Pangu'
pkgver=1.0.3 # renovate: datasource=github-tags depName=MisaLiu/LiteLoaderQQNT-Pangu
pkgrel=1
pkgdesc="给你的 QQNT 注入盘古之力"
arch=('any')
url="https://github.com/MisaLiu/LiteLoaderQQNT-Pangu"
license=("MIT")
depends=("liteloader-qqnt")
provides=("liteloader-qqnt-pangu-bin")

source=("${pkgname}-${pkgver}.zip::${url}/releases/download/${pkgver}/LLPangu.zip")
sha256sums=('c2e14a82ea5bbac5fba3d152637d808b4e0a8092f61793cf05531d7d55b74045')

package() {
    mkdir -p "${pkgdir}/opt/LiteLoader/plugins/${_pkgname}"
    chmod 0755 "${pkgdir}/opt/LiteLoader" "${pkgdir}/opt/LiteLoader/plugins"
    cp -r "${srcdir}/${_pkgname}/"* "${pkgdir}/opt/LiteLoader/plugins/LLPangu"
}
